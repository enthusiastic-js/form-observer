{
  // TODO: Make compatible with NPM Workspaces ... EDIT: Do we need workspaces if we're using JSDocs?
  "compilerOptions": {
    "target": "ES2021",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "allowJs": true,
    "checkJs": true,
    "outDir": "build",
    "jsx": "preserve",
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  // TODO: Split Vitest Config out from final production bundle ... EDIT: Depends on comment above
  "include": ["packages/**/*", "scripts/**/*", "vitest.config.ts"]
}
