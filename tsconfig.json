{
  // TODO: Make compatible with NPM Workspaces
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "outDir": "build",
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": false
  },
  // TODO: Split Jest Config out from final production bundle
  "include": ["packages/**/*", "jest.config.ts"]
}
