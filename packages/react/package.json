{
  "name": "@form-observer/react",
  "type": "module",
  "version": "0.0.0-experimental-2",
  "description": "Convenience functions for the `@form-observer/core` package, designed for React apps",
  "exports": {
    ".": {
      "require": {
        "types": "./index.d.cts",
        "default": "./index.cjs"
      },
      "types": "./index.d.ts",
      "default": "./index.js"
    },
    "./createFormValidityObserver": {
      "require": {
        "types": "./createFormValidityObserver.d.cts",
        "default": "./createFormValidityObserver.cjs"
      },
      "types": "./createFormValidityObserver.d.ts",
      "default": "./createFormValidityObserver.js"
    },
    "./useFormValidityObserver": {
      "require": {
        "types": "./useFormValidityObserver.d.cts",
        "default": "./useFormValidityObserver.cjs"
      },
      "types": "./useFormValidityObserver.d.ts",
      "default": "./useFormValidityObserver.js"
    },
    "./types": {
      "types": "./types.d.ts"
    }
  },
  "peerDependencies": {
    "@form-observer/core": "*",
    "react": ">=16.8.0"
  },
  "devDependencies": {
    "@testing-library/react": "^14.0.0",
    "@types/react": "^18.2.31"
  },
  "author": "Isaiah Thomason",
  "license": "MIT",
  "keywords": [
    "form",
    "observer",
    "web",
    "validation",
    "react"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/enthusiastic-js/form-observer.git"
  },
  "bugs": {
    "url": "https://github.com/enthusiastic-js/form-observer/issues"
  },
  "homepage": "https://github.com/enthusiastic-js/form-observer#readme"
}
